<html>
    <head>
        <title>Products Page</title>
    </head>
    <Style>
    div.container{
        border:3px solid red;
        padding-left:30;
        padding-top:30; 
        height:180;
        width:150;
        
    };
    div.product-name{
        text-align: left;
    };
    div.product-price{
        text-align: right;
    }  
    </Style>
    <body>
        {{#each products}}
        <div class = 'Container' >
            <img src = "http://localhost:4000/views/burger.jpg"  width= '100', height='100'/>
            <div class = 'product-name'>
             {{ this.Name}}
            </div>
            <div class="product-price">
             Price: {{this.Price}}
            </div>  
        </div>
        <br>
        {{/each}}
    </body>
</html>